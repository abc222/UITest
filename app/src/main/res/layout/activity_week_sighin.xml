<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_oval"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/weeksignin_sign_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="签到"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_lianxusign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连续3天"
                android:textColor="#fff"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <com.uitest.weeksighin.stepview.ui.widget.StepsView
        android:id="@+id/step_view"
        android:layout_below="@id/rl_oval"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="77dp" />

</RelativeLayout>